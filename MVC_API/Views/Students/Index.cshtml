@model IEnumerable<MVC_API.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model) {


        <td>
            <a href="/Students/Details/@item.StudentID">
                <div class="card student" style="width:18rem; border:solid black 1px; float:left; margin:5px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.FirstName @item.LastName</h5>
                        <p class="card-text">Student ID: @item.StudentID</p>
                        <p class="card-text">Favorite color: @item.FavoriteColor</p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.StudentID }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.StudentID }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </a>
        </td>
}
    <div class="row">
        <br />
    </div>
